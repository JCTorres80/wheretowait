<h1>Listing question_answers</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @question_answers.each do |question_answer| %>
  <tr>
    <td><%= question_answer.question %></td>
    <td><%= question_answer.answer %></td>
    <td><%= link_to 'Show', question_answer %></td>
    <td><%= link_to 'Edit', edit_question_answer_path(question_answer) %></td>
    <td><%= link_to 'Destroy', question_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

